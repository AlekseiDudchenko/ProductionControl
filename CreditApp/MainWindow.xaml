<Window x:Class="CreditApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ООО Вентсай"
        Width="350"
        Height="350">





    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">

            <Label Name="Datelable" />

            <Label Content="Офис" />
            <Button Click="Button_Click_Debit_Material" Content="Приход материалов" />
            <Label />
            <Button Click="Button_Click_Credit_Material" Content="Расход материалов" />

            <Label Content="Цех" />
            <Button Click="Button_Click_Debit_Maney" Content="Движение денежных средств" />
            <Label />
            <Button 
                    Content="Расход денежных средств"
                    IsEnabled="False"
                    Visibility="Hidden" />
            <Label Height="30" />
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
            <Button Click="Button_Click_Exit" Content="Закрыть" IsCancel="True" />
            <Label />
        </StackPanel>

    </Grid>
</Window>
